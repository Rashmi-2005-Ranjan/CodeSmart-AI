{
    "manifest_version": 3,
    "name": "CodeSmart Assistant",
    "version": "1.0",
    "description": "An AI Assistant for LeetCode Users",
    "permissions": ["storage", "activeTab", "scripting", "tabs"],
    "host_permissions": ["https://leetcode.com/problems/*"],
    "background": {
        "service_worker": "background.js"
    },
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "icons/gear.jpg",
            "32": "icons/extensionicon.png",
            "48": "icons/brain.jpg",
            "128": "icons/light.jpg"
        }
    },
    "icons": {
        "16": "icons/gear.jpg",
        "32": "icons/extensionicon.png",
        "48": "icons/brain.jpg",
        "128": "icons/light.jpg"
    }
}